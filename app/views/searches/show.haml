%h1= @route

%table.table
  %thead
    %tr
      %th Dep
      %th Arr
      %th Dep at
      %th Arr at
      %th Points
      %th Cash
  %tbody
    - @flights.each do |flight|
      %tr[flight]
        %td= flight.dep
        %td= flight.arr
        %td= flight.dep_at
        %td= flight.arr_at
        %td= flight.fare.points
        %td= number_to_currency(flight.fare.cash / 100.to_f)
